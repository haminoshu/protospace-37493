<div class="card">
  <%= link_to image_tag(avatar.image, class: :card__img), avatar_path(avatar) %>
  <div class="card__body">
    <%= link_to avatar.title, avatar_path(avatar), class: :card__title%>
    <p class="card__summary">
      <%= avatar.catch_copy %>
    </p>
    <%= link_to "by #{avatar.user.name}", user_path(avatar.user.id), class: :card__user %>
  </div>
</div>