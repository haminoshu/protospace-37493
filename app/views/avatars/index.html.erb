<main class="main">
  <div class="inner">
    <%# ログインしているときは以下を表示する %>
    <% if user_signed_in? %>
      <div class="greeting">
        <%= link_to "#{current_user.name}さん、", user_path(current_user.id), class: :greeting__link%>
      <%=  "今日はどんなお仕事をしますか？" %>
      </div>
    <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
      <%= render partial: "avatars/avatar", collection: @avatars %>
    </div>
  </div>
</main>
